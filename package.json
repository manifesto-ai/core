{
  "name": "@manifesto-ai/monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.2",
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "build": "turbo run build --filter=@manifesto-ai/core --filter=@manifesto-ai/host --filter=@manifesto-ai/world --filter=@manifesto-ai/compiler --filter=@manifesto-ai/builder --filter=@manifesto-ai/intent-ir",
    "dev": "turbo run dev",
    "lint": "turbo run lint --filter=@manifesto-ai/core --filter=@manifesto-ai/host --filter=@manifesto-ai/world --filter=@manifesto-ai/compiler --filter=@manifesto-ai/builder --filter=@manifesto-ai/intent-ir",
    "test": "turbo run test --filter=@manifesto-ai/core --filter=@manifesto-ai/host --filter=@manifesto-ai/world --filter=@manifesto-ai/compiler --filter=@manifesto-ai/builder --filter=@manifesto-ai/intent-ir",
    "test:coverage": "turbo run test:coverage --filter=@manifesto-ai/core --filter=@manifesto-ai/host --filter=@manifesto-ai/world --filter=@manifesto-ai/compiler --filter=@manifesto-ai/builder --filter=@manifesto-ai/intent-ir",
    "bench:core-host-world": "node scripts/bench-core-host-world.mjs",
    "clean": "turbo run clean && rm -rf node_modules",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:archive": "node scripts/archive-docs.mjs",
    "docs:mel-grammar": "node scripts/update-mel-grammar.mjs",
    "docs:api": "typedoc --options typedoc.json",
    "docs:api:clean": "rm -rf docs/api"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.17",
    "mermaid": "^11.12.2",
    "turbo": "^2.7.4",
    "typedoc": "^0.28.16",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.17",
    "vue": "^3.5.26"
  },
  "dependencies": {
    "zod": "^4.3.5"
  },
  "pnpm": {
    "overrides": {
      "@hono/node-server": "1.19.9",
      "esbuild": "0.27.2",
      "hono": "4.11.4",
      "preact": "10.28.2"
    }
  }
}
